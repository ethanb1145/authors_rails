<form action="/authors" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new author:</p>
  <input type='text' name='author[name]'/><br/>
  <textarea name='author[hometown]'></textarea><br/>
  <textarea name='author[currently_writing]'></textarea><br/>
  <textarea name='author[total_awards]'></textarea><br/>
  <input type='submit'/>
</form>